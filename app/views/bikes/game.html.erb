<div class="gamePages" data-controller="game-three game-animated" data-action="game-session:end->game-config#endSession" data-game-animated-target="pageGame">
  <span data-game-config-url-value="/gamingsessions"></span>
  <div data-controller="game-config timer"
    data-action="game-session:end->game-config#endSession"
    data-game-config-api-value="<%= ENV['FAST_API_ENDPOINT'] %>">
    <div>
      <h2 data-timer-target="timerView" class="compteurTime" data-game-config-target="timeLeft" data-game-animated-target="compteurTime">10:00</h2>
    </div>
    <div class="game--message" data-game-animated-target="gameMessage">
      <svg width="30vw" viewBox="0 0 331 110" fill="none" xmlns="http://www.w3.org/2000/svg">
        <path fill-rule="evenodd" clip-rule="evenodd" d="M331 99.1862V27.4919C331 21.5711 326.2 16.7713 320.279 16.7713H67.0041C93.8057 25.5714 58.6285 94.1609 0 89.4375V99.1862C0 105.107 4.79981 109.907 10.7207 109.907H320.279C326.2 109.907 331 105.107 331 99.1862Z" fill="white"/>
