 <div class="super-container">
 <div class="croix">
    <%= link_to 'X', gamingsession_path(cookies[:gamingsession_id]) %>
  </div>
  <div class="title-signup">

  </div>
   <div  class="logo-signup">
  </div>

  <div class="container-formu">
    <div>
      <%= simple_form_for(resource, as: resource_name, url: registration_path(resource_name),
        data: {turbo: false}) do |f| %>
        <div class="formulaire">
          <div class="form-inputs">
            <p class="label-fr">Votre Prénom:</p>
              <%= f.input :first_name, label: false%>
            <p class="label-fr">Votre Nom:</p>
              <%= f.input :last_name, label: false%>
            <p class="label-fr">Votre adresse e-mail:</p>
              <%= f.input :email,
                        required: true,
                        autofocus: true,
                        input_html: { autocomplete: "email" }, label: false%>

              <p class="label-fr">Tapez votre mot de passe:</p>
                <%= f.input :password,
                        required: true,
                        input_html: { autocomplete: "new-password" }, label: false %>
            <p class="label-fr">Retapez votre mot de passe:</p>
              <%= f.input :password_confirmation,
                        required: true,
                        input_html: { autocomplete: "new-password" }, label: false %>
          </div>
          <div class="form-actions">
            <%= f.button :submit, "Créer mon compte" %>
          </div>
        </div>
      <% end %>
    </div>
  </div>
</div>
