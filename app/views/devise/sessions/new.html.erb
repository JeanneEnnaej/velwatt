
<div clas="super-container">
  <div>
  <h1>Connexion</h1>
  </div>
  <div class="logo">
  </div>


  <div class="container-form">
    <div>
      <%= simple_form_for(resource, as: resource_name, url: session_path(resource_name),
        data: {turbo: false}) do |f| %>
        <div class="formulaire">
          <div class="form-inputs">
            <p class="label-fr">Email:</p>
              <%= f.input :email,
                        required: false,
                        autofocus: true,
                        input_html: { autocomplete: "email" }, label: false %>

            <p class="label-fr">Mot de passe:</p>
              <%= f.input :password,
                        required: false,
                        input_html: { autocomplete: "current-password" }, label: false %>
              <%# <%= f.input :remember_me, as: :boolean if devise_mapping.rememberable? %>
          </div>

          <div class="form-actions">
            <div class="btns">
              <%= f.button :submit, "Connexion" %>
            </div>
          </div>
           <div class="form-actions">
            <div class="button-login">
              <%= link_to "M'inscrire", new_user_registration_path%>
            </div>
          </div>
        </div>
      <% end %>
    </div>
  </div>
</div>
