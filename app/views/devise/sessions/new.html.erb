
<div class="super-container">
  <% if cookies[:gamingsession_id].present? %>
    <div class="croix">
      <%= link_to 'X', gamingsession_path(cookies[:gamingsession_id]) %>
    </div>
  <% end %>
  <div class="logo">
  </div>


  <div class="container-form">
    <div>
      <%= simple_form_for(resource, as: resource_name, url: session_path(resource_name),
        data: {turbo: false}) do |f| %>
        <div class="formulaire">
          <div class="form-inputs">
            <p class="label-fr">Email :</p>
              <%= f.input :email,
                        required: false,
                        autofocus: true,
                        input_html: { autocomplete: "email" }, label: false, placeholder: "toto@toto.com" %>

            <p class="label-fr">Mot de passe :</p>
              <%= f.input :password,
                        required: false,
                        input_html: { autocomplete: "current-password" }, label: false, placeholder: "mot de passe" %>
              <%# <%= f.input :remember_me, as: :boolean if devise_mapping.rememberable? %>
          </div>

          <div class="form-actions">
            <div class="button-login">
              <%= f.button :submit, "Connexion" %>
            </div>
          </div>
           <div>
            <div class="inscription">
              <p><%= link_to "Vous n'avez pas de compte? Inscrivez-vous !", new_user_registration_path%></p>
            </div>
          </div>
        </div>
      <% end %>
    </div>
  </div>
</div>
