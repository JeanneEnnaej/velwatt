<div>
  <div >
    <h1>Historique de vos sessions</h1>
  </div>
  <div class="count-sessions">
    <div class="count">
      <h2><%= @gamingsessions.count %></h2>
    </div>
    <div class="sess">
      <p>sessions<p>
    </div>
  </div>
  <div class="sessions-container">
    <div class="tab-title">
      <div class="date">
        <p>Date</p>
      </div>
      <div class="prod-total">
        <p>Prod total</p>
      </div>
      <div class="score-session">
        <p>Score</p>
      </div>
      <div class="see-session">
        <p></p>
      </div>
    </div>
    <% @gamingsessions.each do |gs| %>
      <div class="tab">
        <div class="date">
          <p><%= gs.date%></p>
        </div>
        <div class="prod-total">
          <p><%= gs.total_production%>wH</p>
        </div>
        <div class="score-session">
          <p><%= gs.score%></p>
        </div>
        <div class="see-session">
          <%= link_to gamingsession_path(gs.id) do %>
            <i class="fa-solid fa-arrow-up-right-from-square"></i>
          <% end %>
        </div>

      </div>
    <% end %>
  </div>
</div>






<%= render "pages/menu" %>
